RewriteEngine On

# ============================================
# Clean URLs for News Posts
# IMPORTANT: This rule must come BEFORE the .html extension removal
# ============================================
# Rewrite /news/post-slug/ or /news/post-slug to post-details.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^news/([a-zA-Z0-9-_]+)/?$ post-details.html [NC,L]

# ============================================
# Clean URLs for Projects
# ============================================
# Rewrite /projects/project-slug/ or /projects/project-slug to project-detail.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^projects/([a-zA-Z0-9-_]+)/?$ project-detail.html [NC,L]

# ============================================
# Remove .html extension (your existing rule)
# ============================================
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [NC,L]

# Redirect /index to /
RewriteRule ^index$ / [R=301,L]

